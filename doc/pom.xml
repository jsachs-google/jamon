<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 file:/Users/jay/local/xml/xsd/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.jamon</groupId>
        <artifactId>jamon-project</artifactId>
        <version>SNAPSHOT</version>
        <relativePath>../jamon/jamon-project</relativePath>
    </parent>
    <artifactId>jamon-doc</artifactId>
    <name>jamon-doc</name>
    <version>SNAPSHOT</version>
    <packaging>jar</packaging>
    <description>Jamon site documentation</description>
    <scm>
        <developerConnection>scm:svn:https://jamon.svn.sourceforge.net/svnroot/jamon/trunk/jamon/doc</developerConnection>
    </scm>
    <dependencies>
        <dependency>
            <groupId>org.jamon</groupId>
            <artifactId>jamon-anttask</artifactId>
            <version>SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>org.jamon</groupId>
            <artifactId>jamon-stdlib</artifactId>
            <version>SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <version>2.4</version>
        </dependency>
        <dependency>
            <groupId>ant-contrib</groupId>
            <artifactId>ant-contrib</artifactId>
            <version>1.0b2</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <inherited>true</inherited>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <id>integration</id>
                        <configuration>
                            <tasks>
                                <ant dir="." inheritRefs="true" inheritAll="true">
                                    <property name="basedir" value="${basedir}"/>
                                    <property name="ignore.svn" value="true"/>
                                    <property name="cp" refid="maven.runtime.classpath"/>
                                    <target name="stage"/>
                                </ant>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
                <!--
                <dependencies>
                    <dependency>
                        <groupId>sun</groupId>
                        <artifactId>tools</artifactId>
                        <version>1.0</version>
                        <scope>system</scope>
                        <systemPath>${toolsJarPath}</systemPath>
                    </dependency>
                </dependencies>
-->
            </plugin>

        </plugins>
    </build>
    <profiles>
        <!-- The antrun tools.jar dependency is not needed on macs -->
        <profile>
            <id>non-mac</id>
            <activation>
                <os>
                    <family>!mac</family>
                </os>
            </activation>
            <properties>
                <toolsJarPath>${java.home}/../lib/tools.jar</toolsJarPath>
            </properties>
        </profile>
        <profile>
            <id>mac</id>
            <activation>
                <os>
                    <family>mac</family>
                </os>
            </activation>
            <properties>
                <!-- We know that java.home will exist; the fact that it's of no value to ant is
                   immaterial, since tools.jar is already incuded in the standard path on a mac. -->
                <toolsJarPath>${java.home}</toolsJarPath>
            </properties>
        </profile>
    </profiles>
</project>
