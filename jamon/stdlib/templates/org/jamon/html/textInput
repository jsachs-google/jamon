<%args>
  org.jamon.html.TextInput input;
  String type => "text";
  int size => 0;
</%args>\
<input type='<% type %>'
       name='<% input.getName() %>'
       value='<% input.getValue() %>'
% int max = input.getMaxLength();
% if (size <= 0 && max > 0) { size = max; }
% if (size > 0) {
       size='<% size %>'
% }
% if (max > 0) {
       maxlength='<% max %>'
% }
% if (input.isUpperCaseOnly()) {
    onChange="capitalize(this)"
% }
/>