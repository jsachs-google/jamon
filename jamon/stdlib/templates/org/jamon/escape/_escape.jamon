<%abstract>\
<%import>
  org.jamon.escaping.Escaping;
</%import>\
<%frag content></%frag>\
<%args>
  boolean compose => false;
</%args>\
<%class>
  protected abstract Escaping _escaping();
</%class>\
<%java>
  content.escapeWith(compose ? _escaping() : getEscaping());
  String text = content.makeRenderer().asString();
  escapeWith(_escaping());
</%java>\
<% text %>