<%farg content></%farg>\
<%args>
  Escaping escaping;
  boolean compose;
</%args>\
<%import>
  java.io.Writer;
  java.io.StringWriter;
  org.jamon.Escaping;
</%import>\
<%java>
  Escaping oldEscaping = getEscaping();
  Writer oldWriter = getWriter();
  StringWriter buffer = new StringWriter();
  writeTo(buffer);
  if (! compose)
  {
    escaping(escaping);
  }
</%java>\
<& content &>\
<%java>
  writeTo(oldWriter);
  escaping(escaping);
</%java>\
<% buffer.toString() %>\
<%java>
  escaping(oldEscaping);
</%java>