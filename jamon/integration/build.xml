<?xml version="1.0"?>

<project name="Jamon Integration Tests" default="compile">

  <description>Integration Tests for the Jamon template engine</description>

  <property file="build.properties"/>
  <property file="${user.home}/.ant.properties"/>

  <property name="build.dir" value="build"/>
  <property name="build.src.dir" value="${build.dir}/src"/>
  <property name="classes.dir" value="${build.dir}/classes"/>
  <property name="src.dir" value="src"/>
  <property name="test.pkg" value="test/jamon"/>

  <property name="java.lib.jamon" value="../core/jamon.jar"/>
  <property name="java.lib.junit" value="/usr/local/share/java/junit.jar" />
  <property name="java.lib.gnuregexp" value="/usr/local/share/java/gnu-regexp-1.1.4.jar" />

  <target name="templates"
          depends=""
          description="Compiles the Jamon templates into Java">
    <mkdir dir="${build.src.dir}"/>
    <java fork="true"
          dir="templates"
          classpath="${java.lib.jamon}"
          classname="org.jamon.TemplateGenerator">
      <arg value="../${build.src.dir}" />
      <arg value="foo.bar." />
      <arg value="${test.pkg}/TestTemplate" />
      <arg value="${test.pkg}/SubTemplate" />
      <arg value="${test.pkg}/Sub2" />
    </java>
  </target>

  <target name="compile" 
          depends="templates"
          description="Compiles Java">
    <mkdir dir="${classes.dir}"/>
    <javac destdir="${classes.dir}"
           debug="true"
           classpath="${java.lib.jamon}:${java.lib.gnuregexp}"
           deprecation="true">
      <src path="${src.dir}"/>
      <src path="${build.src.dir}"/>
    </javac>
  </target>

  <target name="test1" 
          depends="compile"
          description="Exercises the compiled templates">
    <java fork="true"
          failonerror="true"
          classpath="${classes.dir}:${java.lib.jamon}:${java.lib.gnuregexp}"
          classname="${test.pkg}.Test1" />
  </target>

  <target name="cvsignores">
    <echo file=".cvsignore">.cvsignore ${build.dir} build.properties
</echo>
  </target>

  <target name="spotless">
    <delete dir="${build.dir}"/>
  </target>

</project>
