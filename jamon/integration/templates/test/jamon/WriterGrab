<%import>
  java.io.StringWriter;
  java.io.Writer;
</%import>\
% StringWriter nw = new StringWriter();
% Writer old = getWriter();
% writeTo(nw);
<&| stringify &>secret message</&>\
% String me = nw.toString();
% writeTo(old);
<% me.toUpperCase() %>
<%def stringify><%farg content></%farg>\
<& content &>\
</%def>