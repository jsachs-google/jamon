<project> 
  <pomVersion>3</pomVersion> 
  <artifactId>maven-jamon-plugin</artifactId> 
  <groupId>jamon</groupId> 
  <name>Jamon Plugin</name> 
  <currentVersion>1.0.0-SNAPSHOT</currentVersion> 

  <developers>
    <developer>
      <name>Jay Sachs</name>
      <id>jay</id>
      <email>jay@jamon.org</email>
    </developer>
  </developers>

  <dependencies>
    <dependency>
      <groupId>jamon</groupId>
      <artifactId>jamon</artifactId>
      <version>2.1</version>
    </dependency>
    <dependency>
      <groupId>jamon</groupId>
      <artifactId>jamon-anttask</artifactId>
      <version>2.1</version>
    </dependency>
  </dependencies>

  <build> 
    <resources> 
      <resource> 
        <directory>${basedir}/src/plugin-resources</directory> 
        <targetPath>plugin-resources</targetPath> 
      </resource> 
      <resource> 
        <directory>${basedir}</directory> 
        <includes> 
          <include>plugin.jelly</include> 
          <include>plugin.properties</include> 
          <include>project.properties</include> 
          <include>project.xml</include> 
        </includes> 
      </resource> 
    </resources> 
  </build> 
</project>
